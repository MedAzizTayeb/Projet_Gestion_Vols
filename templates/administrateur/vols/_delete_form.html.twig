<form method="post" action="{{ path('app_vol_delete', {'id': vol.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce vol ? Cette action supprimera également toutes les réservations associées.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vol.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer
    </button>
</form>
