{% extends 'base.html.twig' %}

{% block title %}Modifier Vol - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="mb-0"><i class="fas fa-edit"></i> Modifier le Vol</h3>
                        <small>{{ vol.numVol }} | {{ vol.depart.ville }} → {{ vol.arrivee.ville }}</small>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Attention:</strong> Modifier ce vol peut affecter les réservations existantes.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.NumVol) }}</label>
                                {{ form_widget(form.NumVol) }}
                                <small class="form-text text-muted">{{ form_help(form.NumVol) }}</small>
                                {{ form_errors(form.NumVol) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.avion) }}</label>
                                {{ form_widget(form.avion) }}
                                {{ form_errors(form.avion) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-plane-departure text-primary"></i> {{ form_label(form.depart) }}
                                </label>
                                {{ form_widget(form.depart) }}
                                {{ form_errors(form.depart) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-plane-arrival text-success"></i> {{ form_label(form.arrivee) }}
                                </label>
                                {{ form_widget(form.arrivee) }}
                                {{ form_errors(form.arrivee) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.DateDepart) }}</label>
                                {{ form_widget(form.DateDepart) }}
                                <small class="form-text text-muted">{{ form_help(form.DateDepart) }}</small>
                                {{ form_errors(form.DateDepart) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.DateArrive) }}</label>
                                {{ form_widget(form.DateArrive) }}
                                <small class="form-text text-muted">{{ form_help(form.DateArrive) }}</small>
                                {{ form_errors(form.DateArrive) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.port) }}</label>
                                {{ form_widget(form.port) }}
                                {{ form_errors(form.port) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.escale) }}</label>
                                {{ form_widget(form.escale) }}
                                <small class="form-text text-muted">{{ form_help(form.escale) }}</small>
                                {{ form_errors(form.escale) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.placesDisponibles) }}</label>
                                {{ form_widget(form.placesDisponibles) }}
                                <small class="form-text text-muted">{{ form_help(form.placesDisponibles) }}</small>
                                {{ form_errors(form.placesDisponibles) }}
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="{{ path('app_admin_vols_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
