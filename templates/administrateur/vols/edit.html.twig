{% extends 'base.html.twig' %}

{% block title %}Modifier Vol - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="mb-0"><i class="fas fa-edit"></i> Modifier le Vol</h3>
                        <small>{{ vol.numVol }} | {{ vol.depart.ville }} → {{ vol.arrivee.ville }}</small>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Attention:</strong> Modifier ce vol peut affecter les réservations existantes.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Numéro de Vol</label>
                                {{ form_widget(form.numVol) }}
                                {{ form_errors(form.numVol) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Avion</label>
                                {{ form_widget(form.avion) }}
                                {{ form_errors(form.avion) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-plane-departure text-primary"></i> Aéroport de Départ
                                </label>
                                {{ form_widget(form.depart) }}
                                {{ form_errors(form.depart) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-plane-arrival text-success"></i> Aéroport d'Arrivée
                                </label>
                                {{ form_widget(form.arrivee) }}
                                {{ form_errors(form.arrivee) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Date et Heure de Départ</label>
                                {{ form_widget(form.dateDepart) }}
                                <small class="form-text text-muted">Sélectionnez la date et l'heure de départ</small>
                                {{ form_errors(form.dateDepart) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Date et Heure d'Arrivée</label>
                                {{ form_widget(form.dateArrive) }}
                                <small class="form-text text-muted">Sélectionnez la date et l'heure d'arrivée</small>
                                {{ form_errors(form.dateArrive) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Porte d'Embarquement</label>
                                {{ form_widget(form.port) }}
                                {{ form_errors(form.port) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Escale</label>
                                {{ form_widget(form.escale) }}
                                <small class="form-text text-muted">Optionnel</small>
                                {{ form_errors(form.escale) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Places Disponibles</label>
                                {{ form_widget(form.placesDisponibles) }}
                                <small class="form-text text-muted">Nombre de places disponibles</small>
                                {{ form_errors(form.placesDisponibles) }}
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="{{ path('app_admin_vols_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
