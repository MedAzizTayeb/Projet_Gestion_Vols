{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur - AeroManager{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1 class="display-4">
                    <i class="fas fa-tachometer-alt"></i> Dashboard Administrateur
                </h1>
                <p class="lead text-muted">Vue d'ensemble de votre système de gestion aérienne</p>
            </div>
        </div>

        <!-- Statistiques principales -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Vols Total
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_vols }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-plane fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-success">
                                <i class="fas fa-calendar-day"></i> {{ stats.vols_aujourdhui }} aujourd'hui
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Avions
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_avions }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-plane-departure fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-success">
                                <i class="fas fa-check-circle"></i> {{ stats.avions_disponibles }} disponibles
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Réservations
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_reservations }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-success">
                                <i class="fas fa-check"></i> {{ stats.reservations_confirmees }} confirmées
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Clients
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.total_clients }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menu de gestion rapide -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-cogs"></i> Actions Rapides
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <a href="{{ path('app_admin_vols_new') }}" class="btn btn-primary btn-block">
                                    <i class="fas fa-plus-circle"></i> Créer un Vol
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="{{ path('app_admin_avions_new') }}" class="btn btn-success btn-block">
                                    <i class="fas fa-plane"></i> Ajouter un Avion
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="{{ path('app_aeroport_new') }}" class="btn btn-info btn-block">
                                    <i class="fas fa-building"></i> Ajouter un Aéroport
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="{{ path('app_admin_rapports') }}" class="btn btn-warning btn-block">
                                    <i class="fas fa-chart-bar"></i> Voir Rapports
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Deux colonnes : Derniers vols et Dernières réservations -->
        <div class="row">
            <!-- Derniers vols -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-plane"></i> Derniers Vols
                        </h6>
                        <a href="{{ path('app_admin_vols_index') }}" class="btn btn-sm btn-primary">
                            Voir tout
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>N° Vol</th>
                                    <th>Départ</th>
                                    <th>Arrivée</th>
                                    <th>Date</th>
                                    <th>Places</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for vol in derniers_vols %}
                                    <tr>
                                        <td>
                                            <strong>{{ vol.numVol }}</strong>
                                        </td>
                                        <td>{{ vol.depart.ville }}</td>
                                        <td>{{ vol.arrivee.ville }}</td>
                                        <td>
                                            <small>{{ vol.dateDepart|date('d/m/Y H:i') }}</small>
                                        </td>
                                        <td>
                                        <span class="badge badge-info">
                                            {{ vol.placesDisponibles }}
                                        </span>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            Aucun vol enregistré
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dernières réservations -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-success">
                            <i class="fas fa-clipboard-list"></i> Dernières Réservations
                        </h6>
                        <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-sm btn-success">
                            Voir tout
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Référence</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for reservation in dernieres_reservations %}
                                    <tr>
                                        <td>
                                            <strong>{{ reservation.reference }}</strong>
                                        </td>
                                        <td>
                                            {{ reservation.client.user.nomComplet }}
                                        </td>
                                        <td>
                                            <small>{{ reservation.dateRes|date('d/m/Y H:i') }}</small>
                                        </td>
                                        <td>
                                            {% if reservation.satut == 'confirmé' %}
                                                <span class="badge badge-success">{{ reservation.satut }}</span>
                                            {% elseif reservation.satut == 'en attente' %}
                                                <span class="badge badge-warning">{{ reservation.satut }}</span>
                                            {% else %}
                                                <span class="badge badge-secondary">{{ reservation.satut }}</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">
                                            Aucune réservation enregistrée
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menu de navigation principal -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-list"></i> Gestion Complète
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="list-group">
                                    <a href="{{ path('app_admin_vols_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-plane text-primary"></i> Gestion des Vols
                                    </a>
                                    <a href="{{ path('app_admin_avions_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-plane-departure text-success"></i> Gestion des Avions
                                    </a>
                                    <a href="{{ path('app_aeroport_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-building text-info"></i> Gestion des Aéroports
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="list-group">
                                    <a href="{{ path('app_admin_reservations_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-clipboard-list text-warning"></i> Gestion des Réservations
                                    </a>
                                    <a href="{{ path('app_ticket_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-ticket-alt text-danger"></i> Gestion des Tickets
                                    </a>
                                    <a href="{{ path('app_paiement_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-credit-card text-success"></i> Gestion des Paiements
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="list-group">
                                    <a href="{{ path('app_admin_clients_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-users text-primary"></i> Gestion des Clients
                                    </a>
                                    <a href="{{ path('app_passager_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-user text-info"></i> Gestion des Passagers
                                    </a>
                                    <a href="{{ path('app_administrateur_index') }}" class="list-group-item list-group-item-action">
                                        <i class="fas fa-user-shield text-danger"></i> Gestion des Administrateurs
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }
        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }
        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}
