{% extends 'base.html.twig' %}

{% block title %}Rapports et Statistiques - AeroManager{% endblock %}

{% block body %}
    <style>
        .stats-card {
            border-radius: 15px;
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
            overflow: hidden;
        }
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        .chart-container {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .destination-bar {
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            height: 30px;
            border-radius: 5px;
            transition: width 0.5s ease;
        }
    </style>

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-chart-bar text-success"></i> Rapports et Statistiques</h1>
                <p class="text-muted">Vue d'ensemble des performances du système</p>
            </div>
            <div>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <!-- Statistiques principales -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card card border-left-primary" style="border-left: 4px solid #667eea;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-primary fw-bold small mb-1">VOLS AUJOURD'HUI</div>
                                <div class="h2 mb-0 fw-bold">{{ rapports.vols_aujourdhui }}</div>
                                <div class="small text-muted mt-2">
                                    <i class="fas fa-plane"></i> En opération
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-plane-departure fa-2x text-primary" style="opacity: 0.3;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card card border-left-success" style="border-left: 4px solid #1cc88a;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-success fw-bold small mb-1">RÉSERVATIONS CE MOIS</div>
                                <div class="h2 mb-0 fw-bold">{{ rapports.reservations_mois }}</div>
                                <div class="small text-muted mt-2">
                                    <i class="fas fa-calendar"></i> Depuis le {{ 'first day of this month'|date('d/m') }}
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-success" style="opacity: 0.3;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card card border-left-info" style="border-left: 4px solid #36b9cc;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-info fw-bold small mb-1">TICKETS CETTE ANNÉE</div>
                                <div class="h2 mb-0 fw-bold">{{ rapports.tickets_annee }}</div>
                                <div class="small text-muted mt-2">
                                    <i class="fas fa-ticket-alt"></i> Depuis janvier {{ 'now'|date('Y') }}
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-ticket-alt fa-2x text-info" style="opacity: 0.3;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stats-card card border-left-warning" style="border-left: 4px solid #f6c23e;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-warning fw-bold small mb-1">CLIENTS ACTIFS</div>
                                <div class="h2 mb-0 fw-bold">{{ rapports.clients_actifs }}</div>
                                <div class="small text-muted mt-2">
                                    <i class="fas fa-users"></i> Sur {{ rapports.total_clients }} total
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-warning" style="opacity: 0.3;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graphiques et analyses -->
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="chart-container">
                    <h5 class="mb-4"><i class="fas fa-map-marked-alt text-primary"></i> Top 5 Destinations</h5>

                    {% if rapports.top_destinations is not empty %}
                        {% set maxReservations = rapports.top_destinations|first.totalReservations %}

                        {% for destination in rapports.top_destinations %}
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <div>
                                        <strong>{{ destination.ville }}</strong>
                                        <span class="badge bg-secondary ms-2">{{ destination.codeIATA }}</span>
                                    </div>
                                    <span class="badge bg-success">{{ destination.totalReservations }} réservations</span>
                                </div>
                                <div class="progress" style="height: 30px;">
                                    <div class="destination-bar progress-bar"
                                         role="progressbar"
                                         style="width: {{ (destination.totalReservations / maxReservations * 100)|round }}%"
                                         aria-valuenow="{{ destination.totalReservations }}"
                                         aria-valuemin="0"
                                         aria-valuemax="{{ maxReservations }}">
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Aucune donnée de destination disponible pour le moment.
                        </div>
                    {% endif %}
                </div>

                <div class="chart-container">
                    <h5 class="mb-4"><i class="fas fa-chart-line text-success"></i> Tendances Mensuelles</h5>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="border rounded p-3">
                                <div class="h4 text-primary">{{ rapports.vols_aujourdhui }}</div>
                                <small class="text-muted">Vols Aujourd'hui</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border rounded p-3">
                                <div class="h4 text-success">{{ rapports.reservations_mois }}</div>
                                <small class="text-muted">Réservations Mois</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border rounded p-3">
                                <div class="h4 text-info">{{ rapports.clients_actifs }}</div>
                                <small class="text-muted">Clients Actifs</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-success mt-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-arrow-up"></i>
                                <strong>Performance:</strong>
                                {% set croissance = ((rapports.reservations_mois / (rapports.total_clients > 0 ? rapports.total_clients : 1)) * 100)|round %}
                                Taux d'activité de {{ croissance }}%
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="chart-container">
                    <h5 class="mb-4"><i class="fas fa-dollar-sign text-success"></i> Revenus Estimés</h5>
                    <div class="text-center mb-4">
                        <div class="display-4 text-success fw-bold">€ {{ (rapports.revenus_mois / 1000)|number_format(1) }}K</div>
                        <p class="text-muted">Revenus ce mois</p>
                    </div>

                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Tickets vendus:</span>
                            <strong>{{ rapports.tickets_annee }}</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Prix moyen:</span>
                            <strong>€ 350</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Clients totaux:</span>
                            <strong>{{ rapports.total_clients }}</strong>
                        </div>
                    </div>

                    <div class="progress mt-4" style="height: 25px;">
                        {% set objectifAnnuel = 100000 %}
                        {% set pourcentage = (rapports.revenus_mois / objectifAnnuel * 100)|round %}
                        <div class="progress-bar bg-success" style="width: {{ pourcentage }}%">
                            {{ pourcentage }}% de l'objectif
                        </div>
                    </div>
                </div>

                <div class="chart-container">
                    <h5 class="mb-4"><i class="fas fa-chart-pie text-info"></i> Répartition</h5>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Réservations confirmées</span>
                            <span class="text-success fw-bold">75%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: 75%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>En attente</span>
                            <span class="text-warning fw-bold">20%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: 20%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Annulées</span>
                            <span class="text-danger fw-bold">5%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-danger" style="width: 5%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-cogs"></i> Actions Rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_vols_index') }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plane"></i><br>Voir Tous les Vols
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_reservations_index') }}" class="btn btn-outline-success w-100">
                            <i class="fas fa-clipboard-list"></i><br>Gérer Réservations
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_clients_index') }}" class="btn btn-outline-info w-100">
                            <i class="fas fa-users"></i><br>Voir Clients
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-tachometer-alt"></i><br>Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
