{% extends 'base.html.twig' %}

{% block title %}Modifier Administrateur - AeroManager{% endblock %}

{% block body %}
    <style>
        .form-header {
            background: linear-gradient(135deg, #f6c23e 0%, #f4a803 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .form-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .form-section h5 {
            color: #f6c23e;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #f6c23e;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        .info-badge {
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1rem;
        }
    </style>

    <div class="form-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-edit"></i> Modifier l'Administrateur</h1>
                    <p class="mb-0 opacity-75">{{ administrateur.matricule }} - {{ administrateur.nomComplet }}</p>
                </div>
                <div>
                    <a href="{{ path('app_administrateur_show', {'id': administrateur.id}) }}" class="btn btn-outline-light me-2">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_administrateur_index') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-card">
                    <div class="info-badge">
                        <i class="fas fa-info-circle text-primary"></i>
                        <strong>Informations :</strong>
                        Modifiez uniquement les champs nécessaires.
                        Laissez le mot de passe vide pour le conserver inchangé.
                    </div>

                    {{ form_start(form) }}

                    {# Informations Personnelles #}
                    <div class="form-section">
                        <h5><i class="fas fa-user"></i> Informations Personnelles</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.matricule) }}
                                </label>
                                {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.matricule) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.niveauAcces) }}
                                </label>
                                {{ form_widget(form.niveauAcces, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.niveauAcces) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.nom) }}
                                </label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.prenom) }}
                                </label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.email) }}
                                </label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.telephone) }}
                                </label>
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+216 XX XXX XXX'}}) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    {# Sécurité #}
                    <div class="form-section">
                        <h5><i class="fas fa-lock"></i> Sécurité</h5>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Changement de mot de passe :</strong>
                            Laissez ce champ vide si vous ne souhaitez pas modifier le mot de passe.
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.plainPassword) }}
                                </label>
                                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Laissez vide pour ne pas changer'}}) }}
                                <small class="text-muted">Minimum 6 caractères si vous le modifiez</small>
                                {{ form_errors(form.plainPassword) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.actif) }}
                                </label>
                                <div class="form-check form-switch mt-2">
                                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                                    <label class="form-check-label">
                                        {% if administrateur.actif %}
                                            <span class="text-success">Compte actif</span>
                                        {% else %}
                                            <span class="text-danger">Compte inactif</span>
                                        {% endif %}
                                    </label>
                                </div>
                                {{ form_errors(form.actif) }}
                            </div>
                        </div>
                    </div>

                    {# Informations Professionnelles #}
                    <div class="form-section">
                        <h5><i class="fas fa-briefcase"></i> Informations Professionnelles</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.departement) }}
                                </label>
                                {{ form_widget(form.departement, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.departement) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    Informations Système
                                </label>
                                <div class="card bg-light">
                                    <div class="card-body py-2">
                                        <small class="d-block">
                                            <strong>Créé le :</strong> {{ administrateur.dateCreation|date('d/m/Y à H:i') }}
                                        </small>
                                        {% if administrateur.dernierConnexion %}
                                            <small class="d-block">
                                                <strong>Dernière connexion :</strong>
                                                {{ administrateur.dernierConnexion|date('d/m/Y à H:i') }}
                                            </small>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.permissions) }}
                                </label>
                                {{ form_widget(form.permissions, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                {{ form_errors(form.permissions) }}
                            </div>
                        </div>
                    </div>

                    {# Roles #}
                    <div class="form-section">
                        <h5><i class="fas fa-shield-alt"></i> Rôles et Autorisations</h5>
                        {{ form_row(form.roles) }}
                    </div>

                    {# Statistiques #}
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Statistiques</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="border rounded p-3">
                                        <div class="h3 text-primary mb-0">{{ administrateur.volsCrees|length }}</div>
                                        <small class="text-muted">Vols Créés</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="border rounded p-3">
                                        <div class="h3 text-success mb-0">{{ administrateur.avionsGeres|length }}</div>
                                        <small class="text-muted">Avions Gérés</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="border rounded p-3">
                                        <div class="h3 text-info mb-0">
                                            {% if administrateur.dernierConnexion %}
                                                {{ administrateur.dernierConnexion|date('d/m') }}
                                            {% else %}
                                                Jamais
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">Dernière Connexion</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Actions #}
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save"></i> Enregistrer les Modifications
                        </button>
                        <a href="{{ path('app_administrateur_show', {'id': administrateur.id}) }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>

                {# Actions Dangereuses #}
                <div class="card mt-4 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Zone Dangereuse</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Supprimer cet administrateur</h6>
                                <p class="text-muted mb-0">
                                    Cette action est irréversible. Toutes les données associées seront perdues.
                                </p>
                            </div>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Delete Modal #}
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle"></i> Confirmer la suppression
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cet administrateur ?</p>
                    <div class="alert alert-danger">
                        <strong>Attention :</strong> Cette action est irréversible !
                    </div>
                    <div class="card bg-light">
                        <div class="card-body">
                            <strong>Matricule :</strong> {{ administrateur.matricule }}<br>
                            <strong>Nom :</strong> {{ administrateur.nomComplet }}<br>
                            <strong>Email :</strong> {{ administrateur.email }}<br>
                            <strong>Vols créés :</strong> {{ administrateur.volsCrees|length }}<br>
                            <strong>Avions gérés :</strong> {{ administrateur.avionsGeres|length }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Annuler
                    </button>
                    <form method="post" action="{{ path('app_administrateur_delete', {'id': administrateur.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ administrateur.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer Définitivement
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Password validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const passwordField = document.querySelector('input[name*="plainPassword"]');
            const password = passwordField ? passwordField.value : '';

            if (password && password.length > 0 && password.length < 6) {
                e.preventDefault();
                alert('Le mot de passe doit contenir au moins 6 caractères !');
                return false;
            }
        });
    </script>
{% endblock %}
