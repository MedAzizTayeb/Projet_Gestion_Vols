{% extends 'base.html.twig' %}

{% block title %}Gestion des Administrateurs - AeroManager{% endblock %}

{% block body %}
    <style>
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
            transition: transform 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }

        .admin-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s;
            border-left: 4px solid transparent;
        }

        .admin-card:hover {
            border-left-color: #667eea;
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

        .action-btn {
            width: 35px;
            height: 35px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }
    </style>

    <div class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user-shield"></i> Gestion des Administrateurs</h1>
                    <p class="mb-0 opacity-75">Gérez les comptes administrateurs du système</p>
                </div>
                <div>
                    <a href="{{ path('app_administrateur_new') }}" class="btn btn-light me-2">
                        <i class="fas fa-plus"></i> Nouvel Administrateur
                    </a>
                    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Tableau de bord
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Statistics #}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Total Administrateurs</div>
                            <h3 class="mb-0">{{ administrateurs|length }}</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user-shield fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Administrateurs Actifs</div>
                            <h3 class="mb-0 text-success">
                                {% set actifs = 0 %}
                                {% for admin in administrateurs %}
                                    {% if admin.actif %}
                                        {% set actifs = actifs + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ actifs }}
                            </h3>
                        </div>
                        <div class="bg-success bg-opacity-10 text-success rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Départements</div>
                            <h3 class="mb-0 text-info">
                                {% set departements = [] %}
                                {% for admin in administrateurs %}
                                    {% if admin.departement and admin.departement not in departements %}
                                        {% set departements = departements|merge([admin.departement]) %}
                                    {% endif %}
                                {% endfor %}
                                {{ departements|length }}
                            </h3>
                        </div>
                        <div class="bg-info bg-opacity-10 text-info rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-building fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Administrators List #}
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Liste des Administrateurs</h5>
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                {% if administrateurs|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="adminsTable">
                            <thead class="bg-light">
                            <tr>
                                <th class="px-4">ID</th>
                                <th>Matricule</th>
                                <th>Nom Complet</th>
                                <th>Email</th>
                                <th>Département</th>
                                <th>Niveau d'Accès</th>
                                <th>Statut</th>
                                <th>Date Création</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for administrateur in administrateurs %}
                                <tr>
                                    <td class="px-4">
                                        <strong>#{{ administrateur.id }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary font-monospace">
                                            {{ administrateur.matricule }}
                                        </span>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>{{ administrateur.nomComplet }}</strong>
                                            {% if administrateur.telephone %}
                                                <div class="small text-muted">
                                                    <i class="fas fa-phone"></i> {{ administrateur.telephone }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>{{ administrateur.email }}</td>
                                    <td>
                                        {% if administrateur.departement %}
                                            <span class="badge bg-info">{{ administrateur.departement }}</span>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            Niveau {{ administrateur.niveauAcces }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if administrateur.actif %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Actif
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Inactif
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div>{{ administrateur.dateCreation|date('d/m/Y') }}</div>
                                            {% if administrateur.dernierConnexion %}
                                                <div class="text-muted">
                                                    Dernière connexion:<br>
                                                    {{ administrateur.dernierConnexion|date('d/m/Y H:i') }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_administrateur_show', {'id': administrateur.id}) }}"
                                               class="action-btn btn btn-sm btn-info"
                                               title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_administrateur_edit', {'id': administrateur.id}) }}"
                                               class="action-btn btn btn-sm btn-warning"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    class="action-btn btn btn-sm btn-danger"
                                                    title="Supprimer"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ administrateur.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Delete Modal #}
                                <div class="modal fade" id="deleteModal{{ administrateur.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-exclamation-triangle"></i> Confirmer la suppression
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer cet administrateur ?</p>
                                                <div class="alert alert-warning">
                                                    <strong>Attention :</strong> Cette action est irréversible !
                                                </div>
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <strong>Matricule :</strong> {{ administrateur.matricule }}<br>
                                                        <strong>Nom :</strong> {{ administrateur.nomComplet }}<br>
                                                        <strong>Email :</strong> {{ administrateur.email }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    Annuler
                                                </button>
                                                <form method="post" action="{{ path('app_administrateur_delete', {'id': administrateur.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ administrateur.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-user-shield fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun administrateur trouvé</h5>
                        <p class="text-muted">Commencez par créer votre premier administrateur</p>
                        <a href="{{ path('app_administrateur_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer un administrateur
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const table = document.getElementById('adminsTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            Array.from(rows).forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });

        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
