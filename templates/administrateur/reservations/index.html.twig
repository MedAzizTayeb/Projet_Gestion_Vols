{% extends 'base.html.twig' %}

{% block title %}Gestion des Réservations - Administration{% endblock %}

{% block body %}
    <style>
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
            transition: transform 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }

        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .badge-confirmed {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
        }

        .badge-cancelled {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
        }

        .badge-pending {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: white;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .action-btn {
            width: 35px;
            height: 35px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            margin: 0 2px;
        }

        .filter-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .flight-route-mini {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }
    </style>

    <div class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-clipboard-list"></i> Gestion des Réservations</h1>
                    <p class="mb-0 opacity-75">Gérez et suivez toutes les réservations</p>
                </div>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> Tableau de bord
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Statistics Cards #}
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Total Réservations</div>
                            <h3 class="mb-0">{{ reservations|length }}</h3>
                        </div>
                        <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Confirmées</div>
                            <h3 class="mb-0 text-success">
                                {{ reservations|filter(r => r.statut == 'confirmé')|length }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-success bg-opacity-10 text-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">En Attente</div>
                            <h3 class="mb-0 text-warning">
                                {{ reservations|filter(r => r.statut == 'en attente')|length }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Annulées</div>
                            <h3 class="mb-0 text-danger">
                                {{ reservations|filter(r => r.statut == 'annulé')|length }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-danger bg-opacity-10 text-danger">
                            <i class="fas fa-times-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Filters #}
        <div class="filter-card">
            <h5 class="mb-3"><i class="fas fa-filter"></i> Filtres</h5>
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Statut</label>
                    <select name="statut" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="confirmé">Confirmé</option>
                        <option value="en attente">En attente</option>
                        <option value="annulé">Annulé</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date de début</label>
                    <input type="date" name="date_debut" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date de fin</label>
                    <input type="date" name="date_fin" class="form-control">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>

        {# Reservations Table #}
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Liste des Réservations</h5>
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                {% if reservations|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="reservationsTable">
                            <thead class="bg-light">
                            <tr>
                                <th class="px-4">Référence</th>
                                <th>Client</th>
                                <th>Vol</th>
                                <th>Trajet</th>
                                <th>Date Départ</th>
                                <th>Date Réservation</th>
                                <th>Passagers</th>
                                <th>Paiement</th>
                                <th>Statut</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td class="px-4">
                                        <strong class="font-monospace">{{ reservation.reference }}</strong>
                                    </td>
                                    <td>
                                        {% if reservation.client and reservation.client.user %}
                                            <div>
                                                <strong>{{ reservation.client.user.nom }} {{ reservation.client.user.prenom }}</strong>
                                                <div class="small text-muted">{{ reservation.client.user.email }}</div>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.vol %}
                                            <strong>{{ reservation.vol.numVol }}</strong>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.vol %}
                                            <div class="flight-route-mini">
                                                <span class="badge bg-light text-dark">{{ reservation.vol.depart.codeIATA }}</span>
                                                <i class="fas fa-arrow-right text-primary"></i>
                                                <span class="badge bg-light text-dark">{{ reservation.vol.arrivee.codeIATA }}</span>
                                            </div>
                                            <div class="small text-muted">
                                                {{ reservation.vol.depart.ville }} → {{ reservation.vol.arrivee.ville }}
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.vol %}
                                            <div>{{ reservation.vol.dateDepart|date('d/m/Y') }}</div>
                                            <div class="small text-muted">{{ reservation.vol.dateDepart|date('H:i') }}</div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div>{{ reservation.dateRes|date('d/m/Y') }}</div>
                                        <div class="small text-muted">{{ reservation.dateRes|date('H:i') }}</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">
                                            {{ reservation.passagers|length }}
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </td>
                                    <td>
                                        {% if reservation.paiement %}
                                            <div>
                                                <strong class="text-success">{{ reservation.paiement.montant|number_format(2, ',', ' ') }} €</strong>
                                            </div>
                                            <div class="small">
                                                {% if reservation.paiement.statut == 'confirmé' %}
                                                    <span class="badge bg-success">Payé</span>
                                                {% elseif reservation.paiement.statut == 'remboursé' %}
                                                    <span class="badge bg-danger">Remboursé</span>
                                                {% else %}
                                                    <span class="badge bg-warning text-dark">{{ reservation.paiement.statut }}</span>
                                                {% endif %}
                                            </div>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-exclamation-triangle"></i> Non payé
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.statut == 'confirmé' %}
                                            <span class="badge badge-confirmed px-3 py-2">
                                                <i class="fas fa-check"></i> Confirmé
                                            </span>
                                        {% elseif reservation.statut == 'annulé' %}
                                            <span class="badge badge-cancelled px-3 py-2">
                                                <i class="fas fa-times"></i> Annulé
                                            </span>
                                        {% else %}
                                            <span class="badge badge-pending px-3 py-2">
                                                <i class="fas fa-clock"></i> {{ reservation.statut|capitalize }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_reservations_show', {'id': reservation.id}) }}"
                                               class="action-btn btn btn-sm btn-info"
                                               title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            {% if reservation.statut == 'en attente' %}
                                                <button type="button"
                                                        class="action-btn btn btn-sm btn-success"
                                                        title="Valider"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#validateModal{{ reservation.id }}">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            {% endif %}

                                            {% if reservation.statut != 'annulé' %}
                                                <button type="button"
                                                        class="action-btn btn btn-sm btn-warning"
                                                        title="Annuler"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#cancelModal{{ reservation.id }}">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            {% endif %}

                                            <button type="button"
                                                    class="action-btn btn btn-sm btn-danger"
                                                    title="Supprimer"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ reservation.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Validate Modal #}
                                {% if reservation.statut == 'en attente' %}
                                    <div class="modal fade" id="validateModal{{ reservation.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-success text-white">
                                                    <h5 class="modal-title">
                                                        <i class="fas fa-check-circle"></i> Valider la réservation
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Voulez-vous valider cette réservation ?</p>
                                                    <div class="card bg-light">
                                                        <div class="card-body">
                                                            <strong>Référence :</strong> {{ reservation.reference }}<br>
                                                            <strong>Client :</strong>
                                                            {% if reservation.client and reservation.client.user %}
                                                                {{ reservation.client.user.nomComplet }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        Annuler
                                                    </button>
                                                    <form method="post" action="{{ path('app_admin_reservations_valider', {'id': reservation.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ reservation.id) }}">
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="fas fa-check"></i> Valider
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {# Cancel Modal #}
                                {% if reservation.statut != 'annulé' %}
                                    <div class="modal fade" id="cancelModal{{ reservation.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-warning text-dark">
                                                    <h5 class="modal-title">
                                                        <i class="fas fa-ban"></i> Annuler la réservation
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Êtes-vous sûr de vouloir annuler cette réservation ?</p>
                                                    <div class="alert alert-warning">
                                                        Les places seront remises disponibles dans le vol.
                                                    </div>
                                                    <div class="card bg-light">
                                                        <div class="card-body">
                                                            <strong>Référence :</strong> {{ reservation.reference }}<br>
                                                            <strong>Client :</strong>
                                                            {% if reservation.client and reservation.client.user %}
                                                                {{ reservation.client.user.nomComplet }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        Non, garder
                                                    </button>
                                                    <form method="post" action="{{ path('app_admin_reservations_annuler', {'id': reservation.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ reservation.id) }}">
                                                        <button type="submit" class="btn btn-warning">
                                                            <i class="fas fa-ban"></i> Oui, annuler
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {# Delete Modal #}
                                <div class="modal fade" id="deleteModal{{ reservation.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-exclamation-triangle"></i> Supprimer la réservation
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer définitivement cette réservation ?</p>
                                                <div class="alert alert-danger">
                                                    <strong>Attention !</strong> Cette action est irréversible.
                                                </div>
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <strong>Référence :</strong> {{ reservation.reference }}<br>
                                                        <strong>Client :</strong>
                                                        {% if reservation.client and reservation.client.user %}
                                                            {{ reservation.client.user.nomComplet }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    Annuler
                                                </button>
                                                <form method="post" action="{{ path('app_admin_reservations_delete', {'id': reservation.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash"></i> Supprimer définitivement
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucune réservation trouvée</h5>
                        <p class="text-muted">Les réservations apparaîtront ici une fois créées</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const table = document.getElementById('reservationsTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            Array.from(rows).forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });

        // Auto-dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
