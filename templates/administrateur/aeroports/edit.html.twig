{% extends 'base.html.twig' %}

{% block title %}Modifier Aéroport - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="mb-0"><i class="fas fa-edit"></i> Modifier l'Aéroport</h3>
                        <small>{{ aeroport.codeIATA }} - {{ aeroport.nom }}</small>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Attention:</strong> Modifier le code IATA peut affecter les vols existants.
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.codeIATA) }}</label>
                                {{ form_widget(form.codeIATA, {'attr': {'class': 'form-control text-uppercase', 'style': 'font-family: monospace; font-size: 1.2rem;'}}) }}
                                <small class="form-text text-muted">{{ form_help(form.codeIATA) }}</small>
                                {{ form_errors(form.codeIATA) }}
                            </div>

                            <div class="col-md-8 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.nom) }}</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.ville) }}</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.ville) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.pays) }}</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                    {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.pays) }}
                            </div>
                        </div>

                        {% if aeroport.vols|length > 0 %}
                            <div class="card bg-light mb-3">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-plane-departure text-info"></i> Vols associés</h6>
                                    <p class="mb-0">Cet aéroport est associé à <strong>{{ aeroport.vols|length }}</strong> vol(s).</p>
                                </div>
                            </div>
                        {% endif %}

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="{{ path('app_admin_aeroports_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-capitalize IATA code
        const iataInput = document.querySelector('input[name*="codeIATA"]');
        if (iataInput) {
            iataInput.addEventListener('input', function() {
                this.value = this.value.toUpperCase();
            });
        }
    </script>
{% endblock %}
