{% extends 'base.html.twig' %}

{% block title %}Nouvel Aéroport - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h3 class="mb-0"><i class="fas fa-building"></i> Ajouter un Aéroport</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Information:</strong> Assurez-vous d'utiliser le code IATA officiel à 3 lettres.
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.codeIATA) }}</label>
                                {{ form_widget(form.codeIATA, {'attr': {'class': 'form-control text-uppercase', 'style': 'font-family: monospace; font-size: 1.2rem;'}}) }}
                                <small class="form-text text-muted">{{ form_help(form.codeIATA) }}</small>
                                {{ form_errors(form.codeIATA) }}
                            </div>

                            <div class="col-md-8 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.nom) }}</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.ville) }}</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.ville) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.pays) }}</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                    {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                {{ form_errors(form.pays) }}
                            </div>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-lightbulb text-warning"></i> Exemples de codes IATA</h6>
                                <ul class="mb-0">
                                    <li><strong>CDG</strong> - Paris Charles de Gaulle, France</li>
                                    <li><strong>TUN</strong> - Tunis-Carthage, Tunisie</li>
                                    <li><strong>JFK</strong> - New York John F. Kennedy, États-Unis</li>
                                    <li><strong>LHR</strong> - Londres Heathrow, Royaume-Uni</li>
                                    <li><strong>DXB</strong> - Dubaï International, Émirats Arabes Unis</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="{{ path('app_admin_aeroports_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-save"></i> Enregistrer l'Aéroport
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-capitalize IATA code
        const iataInput = document.querySelector('input[name*="codeIATA"]');
        if (iataInput) {
            iataInput.addEventListener('input', function() {
                this.value = this.value.toUpperCase();
            });
        }
    </script>
{% endblock %}
