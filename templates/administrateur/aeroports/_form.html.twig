{{ form_start(form) }}
<div class="row">
    <div class="col-md-4 mb-3">
        {{ form_label(form.codeIATA, 'Code IATA', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.codeIATA, {'attr': {'class': 'form-control text-uppercase', 'placeholder': 'Ex: CDG'}}) }}
        <small class="form-text text-muted">Code à 3 lettres (ex: CDG, TUN, JFK)</small>
        {{ form_errors(form.codeIATA) }}
    </div>

    <div class="col-md-8 mb-3">
        {{ form_label(form.nom, 'Nom de l\'aéroport', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Aéroport International de Paris-Charles de Gaulle'}}) }}
        {{ form_errors(form.nom) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-city"></i></span>
            {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Paris'}}) }}
        </div>
        {{ form_errors(form.ville) }}
    </div>

    <div class="col-md-6 mb-3">
        {{ form_label(form.pays, 'Pays', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-flag"></i></span>
            {{ form_widget(form.pays, {'attr': {'class': 'form-control', 'placeholder': 'Ex: France'}}) }}
        </div>
        {{ form_errors(form.pays) }}
    </div>
</div>

<div class="d-flex gap-2 justify-content-end mt-3">
    <a href="{{ path('app_aeroport_index') }}" class="btn btn-secondary">
        <i class="fas fa-times"></i> Annuler
    </a>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
</div>
{{ form_end(form) }}

<script>
    // Auto-capitalize IATA code
    const iataInput = document.querySelector('input[name*="codeIATA"]');
    if (iataInput) {
        iataInput.addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    }
</script>
