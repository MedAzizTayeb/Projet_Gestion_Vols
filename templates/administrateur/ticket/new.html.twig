{% extends 'base.html.twig' %}

{% block title %}Nouveau Billet - Administration{% endblock %}

{% block body %}
    <style>
        .form-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
    </style>

    <div class="form-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-plus-circle"></i> Nouveau Billet</h1>
                    <p class="mb-0 opacity-75">Créer un nouveau billet</p>
                </div>
                <a href="{{ path('app_ticket_admin_index') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-card">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle"></i>
                        <strong>Information :</strong> Les champs avec un astérisque sont obligatoires.
                        Les champs ID et numéro seront générés automatiquement si laissés vides.
                    </div>

                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.idTicket) }}</label>
                            {{ form_widget(form.idTicket) }}
                            <small class="text-muted">Laissez vide pour génération automatique</small>
                            {{ form_errors(form.idTicket) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.numero) }}</label>
                            {{ form_widget(form.numero) }}
                            <small class="text-muted">Format: TKT-XXXXX</small>
                            {{ form_errors(form.numero) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.dateCreation) }}</label>
                            {{ form_widget(form.dateCreation) }}
                            <small class="text-muted">Date d'émission du billet</small>
                            {{ form_errors(form.dateCreation) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.pdfPath) }}</label>
                            {{ form_widget(form.pdfPath) }}
                            <small class="text-muted">Chemin du fichier PDF</small>
                            {{ form_errors(form.pdfPath) }}
                        </div>

                        <div class="col-12">
                            <hr class="my-3">
                            <h5 class="mb-3"><i class="fas fa-link"></i> Associations</h5>
                        </div>

                        <div class="col-12">
                            <label class="form-label">{{ form_label(form.reservation) }} <span class="text-danger">*</span></label>
                            {{ form_widget(form.reservation) }}
                            {{ form_errors(form.reservation) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.passager) }}</label>
                            {{ form_widget(form.passager) }}
                            {{ form_errors(form.passager) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.vol) }}</label>
                            {{ form_widget(form.vol) }}
                            {{ form_errors(form.vol) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Créer le Billet
                        </button>
                        <a href="{{ path('app_ticket_admin_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
