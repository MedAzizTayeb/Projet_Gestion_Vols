{% extends 'base.html.twig' %}

{% block title %}Billet {{ ticket.numero }} - Administration{% endblock %}

{% block body %}
    <style>
        .ticket-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .ticket-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
            border: 2px dashed #667eea;
        }

        .ticket-number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
            font-family: 'Courier New', monospace;
            letter-spacing: 2px;
        }

        .info-section {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .barcode {
            background: white;
            padding: 1rem;
            text-align: center;
            border-radius: 10px;
            border: 2px solid #667eea;
        }

        .barcode-lines {
            display: flex;
            justify-content: center;
            gap: 2px;
            margin-bottom: 0.5rem;
        }

        .barcode-line {
            width: 3px;
            height: 60px;
            background: black;
        }

        .barcode-line:nth-child(2n) {
            width: 2px;
        }

        .barcode-line:nth-child(3n) {
            width: 4px;
        }
    </style>

    <div class="ticket-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-ticket-alt"></i> Billet {{ ticket.numero }}</h1>
                    <p class="mb-0 opacity-75">Détails du billet électronique</p>
                </div>
                <a href="{{ is_granted('ROLE_ADMIN') ? path('app_ticket_admin_index') : path('app_ticket_index') }}" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-lg-8">
                {# Ticket Card #}
                <div class="ticket-card">
                    <div class="text-center mb-4">
                        <div class="ticket-number">{{ ticket.numero }}</div>
                        <small class="text-muted">Numéro de billet</small>
                    </div>

                    {# Flight Information #}
                    {% if ticket.vol %}
                        <div class="info-section">
                            <h5 class="mb-3">
                                <i class="fas fa-plane text-primary"></i> Informations de Vol
                            </h5>

                            <div class="info-row">
                                <span class="text-muted">Numéro de vol</span>
                                <strong>{{ ticket.vol.numVol }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Départ</span>
                                <div class="text-end">
                                    <strong>{{ ticket.vol.depart.ville }}</strong><br>
                                    <small class="text-muted">{{ ticket.vol.depart.codeIATA }} - {{ ticket.vol.depart.nom }}</small>
                                </div>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Arrivée</span>
                                <div class="text-end">
                                    <strong>{{ ticket.vol.arrivee.ville }}</strong><br>
                                    <small class="text-muted">{{ ticket.vol.arrivee.codeIATA }} - {{ ticket.vol.arrivee.nom }}</small>
                                </div>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Date de départ</span>
                                <strong>{{ ticket.vol.dateDepart|date('d/m/Y à H:i') }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Date d'arrivée</span>
                                <strong>{{ ticket.vol.dateArrive|date('d/m/Y à H:i') }}</strong>
                            </div>

                            {% if ticket.vol.port %}
                                <div class="info-row">
                                    <span class="text-muted">Porte d'embarquement</span>
                                    <strong>{{ ticket.vol.port }}</strong>
                                </div>
                            {% endif %}

                            {% if ticket.vol.escale %}
                                <div class="alert alert-info mt-3 mb-0">
                                    <i class="fas fa-exchange-alt"></i>
                                    <strong>Escale:</strong> {{ ticket.vol.escale }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {# Passenger Information #}
                    {% if ticket.passager %}
                        <div class="info-section">
                            <h5 class="mb-3">
                                <i class="fas fa-user text-success"></i> Informations Passager
                            </h5>

                            <div class="info-row">
                                <span class="text-muted">Nom complet</span>
                                <strong>{{ ticket.passager.prenom }} {{ ticket.passager.nom }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Numéro de passeport</span>
                                <strong class="font-monospace">{{ ticket.passager.numPassport }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Nationalité</span>
                                <strong>{{ ticket.passager.nationalite }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Date de naissance</span>
                                <strong>{{ ticket.passager.dateNaissance|date('d/m/Y') }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Bagages</span>
                                <strong>{{ ticket.passager.poidsBagages }} kg</strong>
                            </div>

                            {% if ticket.passager.besoinsSpeciaux %}
                                <div class="alert alert-warning mt-3 mb-0">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Besoins spéciaux:</strong> {{ ticket.passager.besoinsSpeciaux }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {# Reservation Information #}
                    {% if ticket.reservation %}
                        <div class="info-section">
                            <h5 class="mb-3">
                                <i class="fas fa-file-alt text-warning"></i> Informations Réservation
                            </h5>

                            <div class="info-row">
                                <span class="text-muted">Référence</span>
                                <strong class="font-monospace">{{ ticket.reservation.reference }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Date de réservation</span>
                                <strong>{{ ticket.reservation.dateRes|date('d/m/Y à H:i') }}</strong>
                            </div>

                            <div class="info-row">
                                <span class="text-muted">Statut</span>
                                <div>
                                    {% if ticket.reservation.statut == 'confirmé' %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Confirmé
                                        </span>
                                    {% elseif ticket.reservation.statut == 'annulé' %}
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> Annulé
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> {{ ticket.reservation.statut|capitalize }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if ticket.reservation.client and ticket.reservation.client.user %}
                                <div class="info-row">
                                    <span class="text-muted">Client</span>
                                    <div class="text-end">
                                        <strong>{{ ticket.reservation.client.user.nom }} {{ ticket.reservation.client.user.prenom }}</strong><br>
                                        <small class="text-muted">{{ ticket.reservation.client.user.email }}</small>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {# Barcode #}
                    <div class="barcode">
                        <div class="barcode-lines">
                            {% for i in 1..30 %}
                                <div class="barcode-line"></div>
                            {% endfor %}
                        </div>
                        <small class="font-monospace">{{ ticket.numero }}</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                {# Ticket Details #}
                <div class="card shadow mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle"></i> Détails du Billet
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">ID Billet</small><br>
                            <strong>{{ ticket.idTicket }}</strong>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">Numéro</small><br>
                            <strong class="font-monospace">{{ ticket.numero }}</strong>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">Date de création</small><br>
                            <strong>{{ ticket.dateCreation|date('d/m/Y à H:i') }}</strong>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">Chemin PDF</small><br>
                            <small class="text-muted font-monospace">{{ ticket.pdfPath }}</small>
                        </div>
                    </div>
                </div>

                {# Actions #}
                <div class="card shadow mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs"></i> Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button onclick="window.print()" class="btn btn-info">
                                <i class="fas fa-print"></i> Imprimer
                            </button>

                            {% if ticket.reservation %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_admin_reservations_show', {'id': ticket.reservation.id}) }}"
                                       class="btn btn-primary">
                                        <i class="fas fa-eye"></i> Voir Réservation
                                    </a>
                                {% else %}
                                    <a href="{{ path('app_reservation_show', {'id': ticket.reservation.id}) }}"
                                       class="btn btn-primary">
                                        <i class="fas fa-eye"></i> Voir Réservation
                                    </a>
                                {% endif %}
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <button type="button"
                                        class="btn btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            {% endif %}

                            <a href="{{ is_granted('ROLE_ADMIN') ? path('app_ticket_admin_index') : path('app_ticket_index') }}"
                               class="btn btn-outline-secondary">
                                <i class="fas fa-list"></i> Liste des billets
                            </a>
                        </div>
                    </div>
                </div>

                {# Quick Info #}
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="fas fa-info"></i> Informations Rapides
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success"></i>
                                Billet électronique valide
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-shield-alt text-primary"></i>
                                Code-barres unique
                            </li>
                            {% if ticket.reservation and ticket.reservation.statut == 'confirmé' %}
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    Réservation confirmée
                                </li>
                            {% endif %}
                            {% if ticket.vol %}
                                <li class="mb-2">
                                    <i class="fas fa-plane text-info"></i>
                                    Vol {{ ticket.vol.numVol }}
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Delete Modal - Only for admins #}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-exclamation-triangle"></i> Confirmer la Suppression
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Êtes-vous sûr de vouloir supprimer ce billet ?</p>
                        <div class="alert alert-warning">
                            <strong>Attention:</strong> Cette action est irréversible.
                        </div>
                        <div class="card bg-light">
                            <div class="card-body">
                                <strong>Billet:</strong> {{ ticket.numero }}<br>
                                {% if ticket.passager %}
                                    <strong>Passager:</strong> {{ ticket.passager.prenom }} {{ ticket.passager.nom }}<br>
                                {% endif %}
                                {% if ticket.vol %}
                                    <strong>Vol:</strong> {{ ticket.vol.numVol }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Annuler
                        </button>
                        <form method="post" action="{{ path('app_ticket_delete', {'id': ticket.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
