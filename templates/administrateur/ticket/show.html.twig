{% extends 'base.html.twig' %}

{% block title %}Billet {{ ticket.numero }} - Administration{% endblock %}

{% block body %}
    <style>
        .detail-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .detail-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #e9ecef;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            font-weight: 600;
            color: #6c757d;
        }

        .info-value {
            font-weight: 500;
            text-align: right;
        }

        .ticket-display {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 20px;
            padding: 2.5rem;
            position: relative;
            overflow: hidden;
        }

        .ticket-display::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .ticket-number {
            font-size: 2.5rem;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .qr-placeholder {
            width: 150px;
            height: 150px;
            background: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #667eea;
            font-size: 3rem;
        }
    </style>

    <div class="detail-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-ticket-alt"></i> Billet {{ ticket.numero }}</h1>
                    <p class="mb-0 opacity-75">Détails complets du billet</p>
                </div>
                <div>
                    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-light me-2">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="{{ path('app_ticket_index') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            {# Main Content #}
            <div class="col-lg-8">
                {# Ticket Visual #}
                <div class="ticket-display mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <small class="opacity-75">NUMÉRO DE BILLET</small>
                                <div class="ticket-number">{{ ticket.numero }}</div>
                            </div>
                            <div class="mb-2">
                                <small class="opacity-75">ID TICKET</small>
                                <div class="h5 mb-0">#{{ ticket.idTicket }}</div>
                            </div>
                            <div>
                                <small class="opacity-75">DATE D'ÉMISSION</small>
                                <div class="h5 mb-0">{{ ticket.dateCreation|date('d/m/Y à H:i') }}</div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="qr-placeholder mx-auto">
                                <i class="fas fa-qrcode"></i>
                            </div>
                            <small class="d-block mt-2 opacity-75">QR CODE</small>
                        </div>
                    </div>
                </div>

                {# Ticket Information #}
                <div class="detail-card">
                    <h4 class="mb-4">
                        <i class="fas fa-info-circle text-primary"></i> Informations du Billet
                    </h4>

                    <div class="info-row">
                        <span class="info-label">ID Billet</span>
                        <span class="info-value">
                            <span class="badge bg-secondary">#{{ ticket.id }}</span>
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">ID Ticket</span>
                        <span class="info-value">
                            <strong>{{ ticket.idTicket }}</strong>
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Numéro</span>
                        <span class="info-value">
                            <span class="badge bg-primary font-monospace">{{ ticket.numero }}</span>
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Date de Création</span>
                        <span class="info-value">{{ ticket.dateCreation|date('d/m/Y à H:i:s') }}</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Chemin PDF</span>
                        <span class="info-value">
                            <code>{{ ticket.pdfPath }}</code>
                        </span>
                    </div>
                </div>

                {# Reservation Details #}
                {% if ticket.reservation %}
                    <div class="detail-card">
                        <h4 class="mb-4">
                            <i class="fas fa-bookmark text-info"></i> Réservation Associée
                        </h4>

                        <div class="info-row">
                            <span class="info-label">Référence</span>
                            <span class="info-value">
                            <a href="{{ path('app_reservation_show', {'id': ticket.reservation.id}) }}"
                               class="badge bg-primary text-decoration-none">
                                {{ ticket.reservation.reference }}
                            </a>
                        </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Statut</span>
                            <span class="info-value">
                            {% if ticket.reservation.satut == 'confirmé' %}
                                <span class="badge bg-success">Confirmé</span>
                            {% elseif ticket.reservation.satut == 'annulé' %}
                                <span class="badge bg-danger">Annulé</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">{{ ticket.reservation.satut|capitalize }}</span>
                            {% endif %}
                        </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Date de Réservation</span>
                            <span class="info-value">{{ ticket.reservation.dateRes|date('d/m/Y à H:i') }}</span>
                        </div>

                        {% if ticket.reservation.client %}
                            <div class="info-row">
                                <span class="info-label">Client</span>
                                <span class="info-value">
                            <strong>{{ ticket.reservation.client.nom }} {{ ticket.reservation.client.prenom }}</strong>
                            <div class="small text-muted">{{ ticket.reservation.client.email }}</div>
                        </span>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {# Flight Details #}
                {% if ticket.vol %}
                    <div class="detail-card">
                        <h4 class="mb-4">
                            <i class="fas fa-plane text-success"></i> Détails du Vol
                        </h4>

                        <div class="info-row">
                            <span class="info-label">Numéro de Vol</span>
                            <span class="info-value">
                            <strong>{{ ticket.vol.numVol }}</strong>
                        </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Départ</span>
                            <span class="info-value">
                            <strong>{{ ticket.vol.depart.ville }}</strong> ({{ ticket.vol.depart.codeIATA }})
                            <div class="small text-muted">{{ ticket.vol.dateDepart|date('d/m/Y à H:i') }}</div>
                        </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Arrivée</span>
                            <span class="info-value">
                            <strong>{{ ticket.vol.arrivee.ville }}</strong> ({{ ticket.vol.arrivee.codeIATA }})
                            <div class="small text-muted">{{ ticket.vol.dateArrivee|date('d/m/Y à H:i') }}</div>
                        </span>
                        </div>

                        {% if ticket.vol.avion %}
                            <div class="info-row">
                                <span class="info-label">Avion</span>
                                <span class="info-value">
                            {{ ticket.vol.avion.modele }}
                            <div class="small text-muted">{{ ticket.vol.avion.immatriculation }}</div>
                        </span>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {# Passenger Details #}
                {% if ticket.passager %}
                    <div class="detail-card">
                        <h4 class="mb-4">
                            <i class="fas fa-user text-warning"></i> Informations Passager
                        </h4>

                        <div class="info-row">
                            <span class="info-label">Nom Complet</span>
                            <span class="info-value">
                            <strong>{{ ticket.passager.nom }} {{ ticket.passager.prenom }}</strong>
                        </span>
                        </div>

                        {% if ticket.passager.email %}
                            <div class="info-row">
                                <span class="info-label">Email</span>
                                <span class="info-value">
                            <a href="mailto:{{ ticket.passager.email }}">{{ ticket.passager.email }}</a>
                        </span>
                            </div>
                        {% endif %}

                        {% if ticket.passager.telephone %}
                            <div class="info-row">
                                <span class="info-label">Téléphone</span>
                                <span class="info-value">
                            <a href="tel:{{ ticket.passager.telephone }}">{{ ticket.passager.telephone }}</a>
                        </span>
                            </div>
                        {% endif %}

                        {% if ticket.passager.dateNaissance %}
                            <div class="info-row">
                                <span class="info-label">Date de Naissance</span>
                                <span class="info-value">{{ ticket.passager.dateNaissance|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            {# Sidebar #}
            <div class="col-lg-4">
                {# Actions #}
                <div class="detail-card">
                    <h5 class="mb-3">
                        <i class="fas fa-cogs"></i> Actions
                    </h5>

                    <div class="d-grid gap-2">
                        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>

                        <button onclick="window.print()" class="btn btn-info">
                            <i class="fas fa-print"></i> Imprimer
                        </button>

                        <a href="#" class="btn btn-success">
                            <i class="fas fa-file-pdf"></i> Générer PDF
                        </a>

                        <button type="button"
                                class="btn btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>

                        <hr>

                        <a href="{{ path('app_ticket_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> Liste des billets
                        </a>
                    </div>
                </div>

                {# Quick Links #}
                <div class="detail-card">
                    <h5 class="mb-3">
                        <i class="fas fa-link"></i> Liens Rapides
                    </h5>

                    <div class="list-group list-group-flush">
                        {% if ticket.reservation %}
                            <a href="{{ path('app_reservation_show', {'id': ticket.reservation.id}) }}"
                               class="list-group-item list-group-item-action">
                                <i class="fas fa-bookmark text-primary"></i> Voir la réservation
                            </a>
                        {% endif %}

                        {% if ticket.vol %}
                            <a href="{{ path('app_vol_show', {'id': ticket.vol.id}) }}"
                               class="list-group-item list-group-item-action">
                                <i class="fas fa-plane text-success"></i> Voir le vol
                            </a>
                        {% endif %}

                        {% if ticket.passager %}
                            <a href="{{ path('app_passager_show', {'id': ticket.passager.id}) }}"
                               class="list-group-item list-group-item-action">
                                <i class="fas fa-user text-warning"></i> Voir le passager
                            </a>
                        {% endif %}
                    </div>
                </div>

                {# Status Info #}
                <div class="detail-card bg-light">
                    <h5 class="mb-3">
                        <i class="fas fa-info-circle"></i> Statut
                    </h5>

                    {% if ticket.reservation %}
                        {% if ticket.reservation.satut == 'confirmé' %}
                            <div class="alert alert-success mb-0">
                                <i class="fas fa-check-circle"></i>
                                <strong>Billet Valide</strong><br>
                                <small>Réservation confirmée</small>
                            </div>
                        {% elseif ticket.reservation.satut == 'annulé' %}
                            <div class="alert alert-danger mb-0">
                                <i class="fas fa-times-circle"></i>
                                <strong>Billet Invalide</strong><br>
                                <small>Réservation annulée</small>
                            </div>
                        {% else %}
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-circle"></i>
                                <strong>En Attente</strong><br>
                                <small>{{ ticket.reservation.satut|capitalize }}</small>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-secondary mb-0">
                            <i class="fas fa-question-circle"></i>
                            <strong>Aucune réservation</strong>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Delete Modal #}
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle"></i> Confirmer la Suppression
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer ce billet ?</p>
                    <div class="alert alert-warning">
                        <strong>Attention :</strong> Cette action est irréversible !
                    </div>
                    <div class="card bg-light">
                        <div class="card-body">
                            <strong>Numéro :</strong> {{ ticket.numero }}<br>
                            <strong>ID Ticket :</strong> {{ ticket.idTicket }}<br>
                            <strong>Date :</strong> {{ ticket.dateCreation|date('d/m/Y') }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Annuler
                    </button>
                    <form method="post" action="{{ path('app_ticket_delete', {'id': ticket.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
