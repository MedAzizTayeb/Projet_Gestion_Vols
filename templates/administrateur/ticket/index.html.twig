{% extends 'base.html.twig' %}

{% block title %}Gestion des Billets - Administration{% endblock %}

{% block body %}
    <style>
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
            transition: transform 0.3s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }

        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .ticket-badge {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .action-btn {
            width: 35px;
            height: 35px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }
    </style>

    <div class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-ticket-alt"></i> Gestion des Billets</h1>
                    <p class="mb-0 opacity-75">Gérez tous les billets émis</p>
                </div>
                <div>
                    <a href="{{ path('app_ticket_new') }}" class="btn btn-light me-2">
                        <i class="fas fa-plus"></i> Nouveau Billet
                    </a>
                    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Tableau de bord
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Statistics #}
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Total Billets</div>
                            <h3 class="mb-0">{{ tickets|length }}</h3>
                        </div>
                        <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Cette Semaine</div>
                            <h3 class="mb-0 text-success">
                                {% set weekTickets = 0 %}
                                {% for ticket in tickets %}
                                    {% if date(ticket.dateCreation) > date('-7 days') %}
                                        {% set weekTickets = weekTickets + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ weekTickets }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-success bg-opacity-10 text-success">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Aujourd'hui</div>
                            <h3 class="mb-0 text-info">
                                {% set todayTickets = 0 %}
                                {% for ticket in tickets %}
                                    {% if ticket.dateCreation|date('Y-m-d') == 'now'|date('Y-m-d') %}
                                        {% set todayTickets = todayTickets + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ todayTickets }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-info bg-opacity-10 text-info">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Réservations Actives</div>
                            <h3 class="mb-0 text-warning">
                                {% set uniqueReservations = [] %}
                                {% for ticket in tickets %}
                                    {% if ticket.reservation and ticket.reservation.satut == 'confirmé' %}
                                        {% set uniqueReservations = uniqueReservations|merge([ticket.reservation.id]) %}
                                    {% endif %}
                                {% endfor %}
                                {{ uniqueReservations|length }}
                            </h3>
                        </div>
                        <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                            <i class="fas fa-bookmark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets Table #}
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Liste des Billets</h5>
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                {% if tickets|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="ticketsTable">
                            <thead class="bg-light">
                            <tr>
                                <th class="px-4">ID</th>
                                <th>Numéro</th>
                                <th>Réservation</th>
                                <th>Client</th>
                                <th>Vol</th>
                                <th>Passager</th>
                                <th>Date Création</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ticket in tickets %}
                                <tr>
                                    <td class="px-4">
                                        <strong class="font-monospace">#{{ ticket.id }}</strong>
                                    </td>
                                    <td>
                                            <span class="badge bg-primary ticket-badge">
                                                {{ ticket.numero }}
                                            </span>
                                    </td>
                                    <td>
                                        {% if ticket.reservation %}
                                            <div>
                                                <strong class="font-monospace">{{ ticket.reservation.reference }}</strong>
                                                <div class="small">
                                                    {% if ticket.reservation.satut == 'confirmé' %}
                                                        <span class="badge bg-success">Confirmé</span>
                                                    {% elseif ticket.reservation.satut == 'annulé' %}
                                                        <span class="badge bg-danger">Annulé</span>
                                                    {% else %}
                                                        <span class="badge bg-warning text-dark">{{ ticket.reservation.satut|capitalize }}</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ticket.reservation and ticket.reservation.client %}
                                            <div>
                                                <strong>{{ ticket.reservation.client.nom }} {{ ticket.reservation.client.prenom }}</strong>
                                                <div class="small text-muted">{{ ticket.reservation.client.email }}</div>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ticket.vol %}
                                            <div>
                                                <strong>{{ ticket.vol.numVol }}</strong>
                                                <div class="small text-muted">
                                                    {{ ticket.vol.depart.ville }} → {{ ticket.vol.arrivee.ville }}
                                                </div>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ticket.passager %}
                                            <strong>{{ ticket.passager.nom }} {{ ticket.passager.prenom }}</strong>
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div>{{ ticket.dateCreation|date('d/m/Y') }}</div>
                                            <div class="text-muted">{{ ticket.dateCreation|date('H:i') }}</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_ticket_admin_show', {'id': ticket.id}) }}"
                                               class="action-btn btn btn-sm btn-info"
                                               title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}"
                                               class="action-btn btn btn-sm btn-warning"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    class="action-btn btn btn-sm btn-danger"
                                                    title="Supprimer"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ ticket.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Delete Modal #}
                                <div class="modal fade" id="deleteModal{{ ticket.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-exclamation-triangle"></i> Confirmer la suppression
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer ce billet ?</p>
                                                <div class="alert alert-warning">
                                                    <strong>Attention :</strong> Cette action est irréversible !
                                                </div>
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <strong>Numéro :</strong> {{ ticket.numero }}<br>
                                                        {% if ticket.reservation %}
                                                            <strong>Réservation :</strong> {{ ticket.reservation.reference }}<br>
                                                        {% endif %}
                                                        <strong>Date :</strong> {{ ticket.dateCreation|date('d/m/Y') }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    Annuler
                                                </button>
                                                <form method="post" action="{{ path('app_ticket_delete', {'id': ticket.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun billet trouvé</h5>
                        <p class="text-muted">Les billets apparaîtront ici une fois créés</p>
                        <a href="{{ path('app_ticket_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer un billet
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const table = document.getElementById('ticketsTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            Array.from(rows).forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });

        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
