{{ form_start(form) }}
<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_label(form.modele, 'Modèle', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Boeing 737-800'}}) }}
        {{ form_errors(form.modele) }}
    </div>

    <div class="col-md-6 mb-3">
        {{ form_label(form.immatriculation, 'Immatriculation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.immatriculation, {'attr': {'class': 'form-control', 'placeholder': 'Ex: F-GKXY'}}) }}
        <small class="form-text text-muted">Numéro d'immatriculation (optionnel)</small>
        {{ form_errors(form.immatriculation) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-users"></i></span>
            {{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de passagers'}}) }}
        </div>
        <small class="form-text text-muted">Nombre total de passagers</small>
        {{ form_errors(form.capacite) }}
    </div>

    <div class="col-md-6 mb-3">
        {{ form_label(form.heuresVol, 'Heures de vol', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-clock"></i></span>
            {{ form_widget(form.heuresVol, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
        </div>
        <small class="form-text text-muted">Nombre total d'heures de vol</small>
        {{ form_errors(form.heuresVol) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-tag"></i></span>
            {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
        </div>
        <small class="form-text text-muted">Type ou classe de l'avion</small>
        {{ form_errors(form.categorie) }}
    </div>

    <div class="col-md-6 mb-3">
        {{ form_label(form.derniereMaintenance, 'Dernière maintenance', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-tools"></i></span>
            {{ form_widget(form.derniereMaintenance, {'attr': {'class': 'form-control'}}) }}
        </div>
        <small class="form-text text-muted">Date de la dernière maintenance</small>
        {{ form_errors(form.derniereMaintenance) }}
    </div>
</div>

<div class="mb-3">
    <div class="form-check">
        {{ form_widget(form.disponibilite, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.disponibilite, 'Disponible pour les vols', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
        <br><small class="form-text text-muted">Cocher si l'avion est opérationnel</small>
    </div>
    {{ form_errors(form.disponibilite) }}
</div>

<div class="d-flex gap-2 justify-content-end mt-3">
    <a href="{{ path('app_avion_index') }}" class="btn btn-secondary">
        <i class="fas fa-times"></i> Annuler
    </a>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
</div>
{{ form_end(form) }}
