{% extends 'base.html.twig' %}

{% block title %}Modifier Avion - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="mb-0"><i class="fas fa-edit"></i> Modifier l'Avion</h3>
                        <small>ID: #{{ avion.id }} | {{ avion.modele }}</small>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.modele) }}</label>
                                {{ form_widget(form.modele) }}
                                <small class="form-text text-muted">{{ form_help(form.modele) }}</small>
                                {{ form_errors(form.modele) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.immatriculation) }}</label>
                                {{ form_widget(form.immatriculation) }}
                                <small class="form-text text-muted">{{ form_help(form.immatriculation) }}</small>
                                {{ form_errors(form.immatriculation) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.capacite) }}</label>
                                {{ form_widget(form.capacite) }}
                                <small class="form-text text-muted">{{ form_help(form.capacite) }}</small>
                                {{ form_errors(form.capacite) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.heuresVol) }}</label>
                                {{ form_widget(form.heuresVol) }}
                                <small class="form-text text-muted">{{ form_help(form.heuresVol) }}</small>
                                {{ form_errors(form.heuresVol) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.categorie) }}</label>
                                {{ form_widget(form.categorie) }}
                                <small class="form-text text-muted">{{ form_help(form.categorie) }}</small>
                                {{ form_errors(form.categorie) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">{{ form_label(form.derniereMaintenance) }}</label>
                                {{ form_widget(form.derniereMaintenance) }}
                                <small class="form-text text-muted">{{ form_help(form.derniereMaintenance) }}</small>
                                {{ form_errors(form.derniereMaintenance) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.disponibilite) }}
                                <label class="form-check-label fw-bold">{{ form_label(form.disponibilite) }}</label>
                                <br><small class="form-text text-muted">{{ form_help(form.disponibilite) }}</small>
                            </div>
                            {{ form_errors(form.disponibilite) }}
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="{{ path('app_admin_avions_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Mettre Ã  jour
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
