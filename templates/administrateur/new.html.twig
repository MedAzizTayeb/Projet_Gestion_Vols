{% extends 'base.html.twig' %}

{% block title %}Nouvel Administrateur - AeroManager{% endblock %}

{% block body %}
    <style>
        .form-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2.5rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .form-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .form-section h5 {
            color: #667eea;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #667eea;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }
    </style>

    <div class="form-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user-plus"></i> Nouvel Administrateur</h1>
                    <p class="mb-0 opacity-75">Créer un nouveau compte administrateur</p>
                </div>
                <a href="{{ path('app_administrateur_index') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-card">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle"></i>
                        <strong>Information :</strong> Les champs marqués d'un astérisque (*) sont obligatoires.
                        L'administrateur pourra se connecter avec son email et le mot de passe défini.
                    </div>

                    {{ form_start(form) }}

                    {# Informations Personnelles #}
                    <div class="form-section">
                        <h5><i class="fas fa-user"></i> Informations Personnelles</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.matricule) }}
                                </label>
                                {{ form_widget(form.matricule, {'attr': {'class': 'form-control', 'placeholder': 'Ex: ADM001'}}) }}
                                <small class="text-muted">Identifiant unique de l'administrateur</small>
                                {{ form_errors(form.matricule) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.niveauAcces) }}
                                </label>
                                {{ form_widget(form.niveauAcces, {'attr': {'class': 'form-select'}}) }}
                                <small class="text-muted">Niveau d'autorisation (1-4)</small>
                                {{ form_errors(form.niveauAcces) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.nom) }}
                                </label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de famille'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.prenom) }}
                                </label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.email) }}
                                </label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@example.com'}}) }}
                                <small class="text-muted">Sera utilisé pour la connexion</small>
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.telephone) }}
                                </label>
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+216 XX XXX XXX'}}) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    {# Sécurité #}
                    <div class="form-section">
                        <h5><i class="fas fa-lock"></i> Sécurité</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold required-field">
                                    {{ form_label(form.plainPassword) }}
                                </label>
                                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 6 caractères'}}) }}
                                <small class="text-muted">Le mot de passe doit contenir au moins 6 caractères</small>
                                {{ form_errors(form.plainPassword) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.actif) }}
                                </label>
                                <div class="form-check form-switch mt-2">
                                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                                    <label class="form-check-label">
                                        Activer ce compte
                                    </label>
                                </div>
                                <small class="text-muted">Un compte inactif ne peut pas se connecter</small>
                                {{ form_errors(form.actif) }}
                            </div>
                        </div>
                    </div>

                    {# Informations Professionnelles #}
                    <div class="form-section">
                        <h5><i class="fas fa-briefcase"></i> Informations Professionnelles</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.departement) }}
                                </label>
                                {{ form_widget(form.departement, {'attr': {'class': 'form-control', 'placeholder': 'Ex: IT, RH, Finance'}}) }}
                                {{ form_errors(form.departement) }}
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    Date de Création
                                </label>
                                <input type="text" class="form-control" value="{{ 'now'|date('d/m/Y H:i') }}" disabled>
                                <small class="text-muted">Date de création du compte</small>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    {{ form_label(form.permissions) }}
                                </label>
                                {{ form_widget(form.permissions, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Permissions spéciales (optionnel)'}}) }}
                                <small class="text-muted">Description des permissions particulières accordées</small>
                                {{ form_errors(form.permissions) }}
                            </div>
                        </div>
                    </div>

                    {# Roles #}
                    <div class="form-section">
                        <h5><i class="fas fa-shield-alt"></i> Rôles et Autorisations</h5>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Note :</strong> Le rôle ROLE_ADMIN est automatiquement attribué.
                        </div>
                        {{ form_row(form.roles) }}
                    </div>

                    {# Actions #}
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Créer l'Administrateur
                        </button>
                        <a href="{{ path('app_administrateur_index') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>

                {# Aide #}
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-question-circle"></i> Aide</h5>
                    </div>
                    <div class="card-body">
                        <h6>Niveaux d'Accès</h6>
                        <ul class="mb-3">
                            <li><strong>Niveau 1 :</strong> Accès basique (lecture seule)</li>
                            <li><strong>Niveau 2 :</strong> Peut modifier les données</li>
                            <li><strong>Niveau 3 :</strong> Peut créer et supprimer</li>
                            <li><strong>Niveau 4 :</strong> Accès avancé</li>
                        </ul>

                        <h6>Bonnes Pratiques</h6>
                        <ul class="mb-0">
                            <li>Utilisez un matricule unique et facile à retenir</li>
                            <li>Choisissez un mot de passe fort (lettres, chiffres, symboles)</li>
                            <li>Assignez le niveau d'accès minimum nécessaire</li>
                            <li>Vérifiez l'email avant validation</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Form validation feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.querySelector('input[type="password"]').value;
            if (password.length < 6) {
                e.preventDefault();
                alert('Le mot de passe doit contenir au moins 6 caractères !');
                return false;
            }
        });
    </script>
{% endblock %}
