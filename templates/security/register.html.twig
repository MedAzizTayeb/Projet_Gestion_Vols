<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - AeroManager</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 1;
        }

        .floating-planes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
        }

        .plane {
            position: absolute;
            font-size: 2rem;
            opacity: 0.15;
            animation: fly 25s linear infinite;
        }

        .plane:nth-child(1) {
            top: 15%;
            animation-duration: 20s;
        }

        .plane:nth-child(2) {
            top: 45%;
            animation-duration: 30s;
            animation-delay: 5s;
        }

        .plane:nth-child(3) {
            top: 75%;
            animation-duration: 25s;
            animation-delay: 10s;
        }

        @keyframes fly {
            0% {
                left: -10%;
                transform: rotate(-5deg);
            }
            100% {
                left: 110%;
                transform: rotate(5deg);
            }
        }

        .register-container {
            max-width: 650px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .register-card {
            background: white;
            border-radius: 25px;
            padding: 3rem;
            box-shadow: 0 25px 70px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .register-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        .register-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .logo-wrapper {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            animation: logoFloat 3s ease-in-out infinite;
        }

        @keyframes logoFloat {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .logo-wrapper i {
            font-size: 2.5rem;
            color: white;
        }

        .register-header h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: 700;
        }

        .register-header p {
            color: #666;
            font-size: 0.95rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.6rem;
            color: #333;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 1.1rem;
            opacity: 0.7;
            transition: all 0.3s;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1rem 1rem 3.2rem;
            border: 2px solid #e8e8e8;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: #fafafa;
        }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .form-control:focus + .input-icon {
            color: #667eea;
            opacity: 1;
        }

        .help-text {
            font-size: 0.85rem;
            color: #999;
            margin-top: 0.4rem;
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .help-text i {
            font-size: 0.8rem;
        }

        .password-strength {
            margin-top: 0.6rem;
        }

        .strength-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.4rem 0.9rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s;
        }

        .strength-weak {
            background: #fee;
            color: #d32f2f;
        }

        .strength-medium {
            background: #fff3cd;
            color: #856404;
        }

        .strength-strong {
            background: #d4edda;
            color: #155724;
        }

        .strength-badge i {
            font-size: 1rem;
        }

        .form-check {
            display: flex;
            align-items: flex-start;
            gap: 0.8rem;
            margin-bottom: 1.8rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .form-check input[type="checkbox"] {
            width: 20px;
            height: 20px;
            margin-top: 2px;
            cursor: pointer;
            accent-color: #667eea;
            flex-shrink: 0;
        }

        .form-check label {
            font-size: 0.9rem;
            color: #666;
            cursor: pointer;
            line-height: 1.5;
        }

        .form-check label a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .form-check label a:hover {
            text-decoration: underline;
        }

        .btn-register {
            width: 100%;
            padding: 1.1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 35px rgba(102, 126, 234, 0.4);
        }

        .btn-register:active {
            transform: translateY(0);
        }

        .divider {
            text-align: center;
            margin: 2rem 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background: #e8e8e8;
        }

        .divider span {
            background: white;
            padding: 0 1.2rem;
            color: #999;
            font-size: 0.9rem;
            position: relative;
            font-weight: 500;
        }

        .login-link {
            text-align: center;
            color: #666;
            font-size: 0.95rem;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

        .login-link a:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .back-home {
            position: absolute;
            top: 2rem;
            left: 2rem;
            z-index: 10;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.8rem 1.6rem;
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.35);
            transform: translateX(-5px);
        }

        .alert {
            padding: 1rem 1.2rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .alert-error {
            background: #fee;
            color: #c33;
            border: 1px solid #fcc;
        }

        .alert i {
            font-size: 1.2rem;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
                gap: 0;
            }
            .register-card {
                padding: 2rem 1.5rem;
            }
            .back-home {
                top: 1rem;
                left: 1rem;
            }
            .btn-back {
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
<div class="floating-planes">
    <div class="plane">‚úàÔ∏è</div>
    <div class="plane">üõ´</div>
    <div class="plane">‚úàÔ∏è</div>
</div>

<div class="back-home">
    <a href="{{ path('app_home') }}" class="btn-back">
        <i class="fas fa-arrow-left"></i> Retour √† l'accueil
    </a>
</div>

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <div class="logo-wrapper">
                <i class="fas fa-plane"></i>
            </div>
            <h1>Cr√©er un compte</h1>
            <p>Rejoignez AeroManager en quelques instants</p>
        </div>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span><strong>Erreur !</strong> Veuillez corriger les erreurs ci-dessous.</span>
            </div>
        {% endif %}

        {{ form_start(registrationForm) }}

        <div class="form-row">
            <div class="form-group">
                {{ form_label(registrationForm.nom) }}
                <div class="input-wrapper">
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom de famille'}}) }}
                    <i class="fas fa-user input-icon"></i>
                </div>
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.prenom) }}
                <div class="input-wrapper">
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre pr√©nom'}}) }}
                    <i class="fas fa-user input-icon"></i>
                </div>
                {{ form_errors(registrationForm.prenom) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email) }}
            <div class="input-wrapper">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre.email@exemple.com'}}) }}
                <i class="fas fa-envelope input-icon"></i>
            </div>
            <div class="help-text">
                <i class="fas fa-info-circle"></i>
                <span>Nous ne partagerons jamais votre adresse email</span>
            </div>
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.telephone) }}
            <div class="input-wrapper">
                {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': '+216 XX XXX XXX'}}) }}
                <i class="fas fa-phone input-icon"></i>
            </div>
            {{ form_errors(registrationForm.telephone) }}
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                <div class="input-wrapper">
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 8 caract√®res', 'id': 'password-input'}}) }}
                    <i class="fas fa-lock input-icon"></i>
                </div>
                <div class="password-strength">
                    <span class="strength-badge" id="strength-badge">
                        <i class="fas fa-info-circle"></i>
                        <span>Entrez un mot de passe</span>
                    </span>
                </div>
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe') }}
                <div class="input-wrapper">
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                    <i class="fas fa-check-circle input-icon"></i>
                </div>
                {{ form_errors(registrationForm.plainPassword.second) }}
            </div>
        </div>

        <div class="form-check">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
        {{ form_errors(registrationForm.agreeTerms) }}

        <button type="submit" class="btn-register">
            <i class="fas fa-user-plus"></i> Cr√©er mon compte
        </button>

        {{ form_end(registrationForm) }}

        <div class="divider">
            <span>Vous avez d√©j√† un compte ?</span>
        </div>

        <div class="login-link">
            <a href="{{ path('app_login') }}">
                <i class="fas fa-sign-in-alt"></i> Se connecter
            </a>
        </div>
    </div>
</div>

<script>
    // Password strength indicator
    const passwordInput = document.getElementById('password-input');
    const strengthBadge = document.getElementById('strength-badge');

    if (passwordInput && strengthBadge) {
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            let strength = 'Faible';
            let badgeClass = 'strength-weak';
            let icon = 'fa-times-circle';

            if (password.length === 0) {
                strengthBadge.innerHTML = '<i class="fas fa-info-circle"></i><span>Entrez un mot de passe</span>';
                strengthBadge.className = 'strength-badge';
                return;
            }

            // Check password strength
            if (password.length >= 8) {
                strength = 'Moyen';
                badgeClass = 'strength-medium';
                icon = 'fa-exclamation-circle';
            }

            if (password.length >= 12 &&
                /[A-Z]/.test(password) &&
                /[0-9]/.test(password) &&
                /[^A-Za-z0-9]/.test(password)) {
                strength = 'Fort';
                badgeClass = 'strength-strong';
                icon = 'fa-check-circle';
            }

            strengthBadge.innerHTML = `<i class="fas ${icon}"></i><span>Force: ${strength}</span>`;
            strengthBadge.className = 'strength-badge ' + badgeClass;
        });
    }
</script>
</body>
</html>
