{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>IdTicket</th>
                <td>{{ ticket.idTicket }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ ticket.numero }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ ticket.dateCreation ? ticket.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PdfPath</th>
                <td>{{ ticket.pdfPath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
