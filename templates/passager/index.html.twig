{% extends 'base.html.twig' %}

{% block title %}Passager index{% endblock %}

{% block body %}
    <h1>Passager index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumPassport</th>
                <th>Nationalite</th>
                <th>DateNaissance</th>
                <th>BesoinsSpeciaux</th>
                <th>PoidsBagages</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for passager in passagers %}
            <tr>
                <td>{{ passager.id }}</td>
                <td>{{ passager.numPassport }}</td>
                <td>{{ passager.nationalite }}</td>
                <td>{{ passager.dateNaissance ? passager.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ passager.besoinsSpeciaux }}</td>
                <td>{{ passager.poidsBagages }}</td>
                <td>
                    <a href="{{ path('app_passager_show', {'id': passager.id}) }}">show</a>
                    <a href="{{ path('app_passager_edit', {'id': passager.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_passager_new') }}">Create new</a>
{% endblock %}
