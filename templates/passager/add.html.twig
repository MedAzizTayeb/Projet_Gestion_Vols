{% extends 'base.html.twig' %}

{% block title %}Ajouter des Passagers - AeroManager{% endblock %}

{% block body %}
    <style>
        .passager-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }

        .passenger-form-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border-left: 5px solid #667eea;
        }

        .passenger-number {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 0.75rem;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }
    </style>

    <div class="passager-header">
        <div class="container">
            <h1><i class="fas fa-user-plus"></i> Ajouter les Passagers</h1>
            <p class="mb-0 opacity-75">Réservation {{ reservation.reference }}</p>
        </div>
    </div>

    <div class="container pb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Info résumé -->
                <div class="alert alert-info mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <strong>Vol:</strong> {{ reservation.vol.numVol }}
                        </div>
                        <div class="col-md-4">
                            <strong>Passagers à ajouter:</strong> {{ passagersRestants }}
                        </div>
                        <div class="col-md-4">
                            <strong>Déjà ajoutés:</strong> {{ passagersExistants }}
                        </div>
                    </div>
                </div>

                <form method="post" action="{{ path('app_passager_add', {'reservationId': reservation.id}) }}">
                    {% for i in 1..passagersRestants %}
                        <div class="passenger-form-card">
                            <div class="d-flex align-items-center mb-4">
                                <div class="passenger-number">{{ i }}</div>
                                <h4 class="mb-0">Passager {{ i }}</h4>
                            </div>

                            <div class="row">
                                <!-- Nom -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label required-field">Nom</label>
                                        <input type="text"
                                               name="passagers[{{ i - 1 }}][nom]"
                                               class="form-control"
                                               placeholder="Ex: DUPONT"
                                               required>
                                    </div>
                                </div>

                                <!-- Prénom -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label required-field">Prénom</label>
                                        <input type="text"
                                               name="passagers[{{ i - 1 }}][prenom]"
                                               class="form-control"
                                               placeholder="Ex: Jean"
                                               required>
                                    </div>
                                </div>

                                <!-- Date de naissance -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label required-field">Date de Naissance</label>
                                        <input type="date"
                                               name="passagers[{{ i - 1 }}][dateNaissance]"
                                               class="form-control"
                                               max="{{ 'now'|date('Y-m-d') }}"
                                               required>
                                    </div>
                                </div>

                                <!-- Numéro de passeport -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label required-field">Numéro de Passeport</label>
                                        <input type="text"
                                               name="passagers[{{ i - 1 }}][numPassport]"
                                               class="form-control"
                                               placeholder="Ex: AB123456"
                                               pattern="[A-Z0-9]{6,12}"
                                               title="6-12 caractères alphanumériques"
                                               required>
                                        <small class="text-muted">Format: lettres majuscules et chiffres (6-12 caractères)</small>
                                    </div>
                                </div>

                                <!-- Nationalité -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label required-field">Nationalité</label>
                                        <select name="passagers[{{ i - 1 }}][nationalite]"
                                                class="form-control"
                                                required>
                                            <option value="">Sélectionnez...</option>
                                            <option value="Tunisienne">Tunisienne</option>
                                            <option value="Française">Française</option>
                                            <option value="Algérienne">Algérienne</option>
                                            <option value="Marocaine">Marocaine</option>
                                            <option value="Libyenne">Libyenne</option>
                                            <option value="Égyptienne">Égyptienne</option>
                                            <option value="Autre">Autre</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Poids bagages -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Poids des Bagages (kg)</label>
                                        <input type="number"
                                               name="passagers[{{ i - 1 }}][poidsBagages]"
                                               class="form-control"
                                               placeholder="20"
                                               min="0"
                                               max="50"
                                               step="0.5"
                                               value="20.00">
                                        <small class="text-muted">Maximum: 50 kg</small>
                                    </div>
                                </div>

                                <!-- Besoins spéciaux -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">Besoins Spéciaux (optionnel)</label>
                                        <textarea name="passagers[{{ i - 1 }}][besoinsSpeciaux]"
                                                  class="form-control"
                                                  rows="2"
                                                  placeholder="Ex: Fauteuil roulant, repas végétarien, allergie..."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <!-- Avertissement -->
                    <div class="alert alert-warning mb-4">
                        <h6><i class="fas fa-exclamation-triangle"></i> Informations Importantes</h6>
                        <ul class="mb-0 small">
                            <li>Assurez-vous que les informations correspondent <strong>exactement</strong> à celles de votre passeport</li>
                            <li>Les erreurs dans les noms peuvent entraîner un refus d'embarquement</li>
                            <li>Votre passeport doit être valide au moins 6 mois après la date du vol</li>
                            <li>Les bagages au-delà de 23 kg peuvent entraîner des frais supplémentaires</li>
                        </ul>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}"
                           class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check"></i> Valider les {{ passagersRestants }} Passager(s)
                        </button>
                    </div>
                </form>

                <!-- Info supplémentaire -->
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fas fa-info-circle"></i> Informations Utiles</h6>
                    </div>
                    <div class="card-body">
                        <h6>Documents requis pour voyager :</h6>
                        <ul>
                            <li><strong>Passeport valide</strong> (validité minimale de 6 mois)</li>
                            <li><strong>Visa</strong> si requis pour votre destination</li>
                            <li><strong>Certificat de vaccination</strong> si applicable</li>
                        </ul>

                        <h6 class="mt-3">Bagages autorisés :</h6>
                        <ul>
                            <li><strong>Bagage en soute :</strong> jusqu'à 23 kg</li>
                            <li><strong>Bagage cabine :</strong> jusqu'à 10 kg (55x40x20 cm)</li>
                            <li><strong>Article personnel :</strong> sac à main, ordinateur portable</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Validation en temps réel
        document.addEventListener('DOMContentLoaded', function() {
            // Convertir les noms en majuscules
            const nomInputs = document.querySelectorAll('input[name*="[nom]"]');
            nomInputs.forEach(input => {
                input.addEventListener('input', function() {
                    this.value = this.value.toUpperCase();
                });
            });

            // Formater le numéro de passeport
            const passportInputs = document.querySelectorAll('input[name*="[numPassport]"]');
            passportInputs.forEach(input => {
                input.addEventListener('input', function() {
                    this.value = this.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
                });
            });

            // Validation du formulaire
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                let isValid = true;
                const requiredFields = form.querySelectorAll('[required]');

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Veuillez remplir tous les champs obligatoires (marqués avec *)');
                    return false;
                }
            });
        });
    </script>
{% endblock %}
