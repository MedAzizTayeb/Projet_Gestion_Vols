{% extends 'base.html.twig' %}

{% block title %}Modifier Mon Profil - AeroManager{% endblock %}

{% block body %}
    <style>
        .edit-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
    </style>

    <div class="edit-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user-edit"></i> Modifier Mon Profil</h1>
                    <p class="mb-0 opacity-75">Mettez à jour vos informations personnelles</p>
                </div>
                <a href="{{ path('app_client_profil') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-edit"></i> Informations Personnelles
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Nom *</label>
                                    <input type="text" class="form-control" name="nom"
                                           value="{{ client.user.nom }}" required>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Prénom *</label>
                                    <input type="text" class="form-control" name="prenom"
                                           value="{{ client.user.prenom }}" required>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Email *</label>
                                    <input type="email" class="form-control" name="email"
                                           value="{{ client.user.email }}" required>
                                    <small class="text-muted">Utilisé pour la connexion</small>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Téléphone</label>
                                    <input type="tel" class="form-control" name="telephone"
                                           value="{{ client.telephone }}"
                                           placeholder="+216 XX XXX XXX">
                                </div>

                                <div class="col-12">
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle"></i>
                                        <strong>Note :</strong> Les champs marqués d'un astérisque (*) sont obligatoires.
                                    </div>
                                </div>

                                <div class="col-12">
                                    <hr>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-save"></i> Enregistrer les Modifications
                                        </button>
                                        <a href="{{ path('app_client_profil') }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-times"></i> Annuler
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-shield-alt"></i> Sécurité
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">
                            Vous souhaitez modifier votre mot de passe ?
                        </p>
                        <a href="{{ path('app_client_change_password') }}" class="btn btn-warning">
                            <i class="fas fa-key"></i> Changer mon Mot de Passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
