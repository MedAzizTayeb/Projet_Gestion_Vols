{% extends 'base.html.twig' %}

{% block title %}Mes Réservations - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1 class="mb-4">
            <i class="fas fa-clipboard-list text-success"></i> Mes Réservations
        </h1>

        {% if reservations is empty %}
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-5x text-muted mb-3" style="opacity: 0.3;"></i>
                <h3 class="text-muted">Aucune réservation</h3>
                <p class="text-muted">Commencez par réserver votre premier vol !</p>
                <a href="{{ path('app_vol_index') }}" class="btn btn-success mt-3">
                    <i class="fas fa-plus"></i> Réserver un vol
                </a>
            </div>
        {% else %}
            <div class="card shadow">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Référence</th>
                                <th>Vol</th>
                                <th>Date Départ</th>
                                <th>Statut</th>
                                <th>Billets</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td><strong class="font-monospace">{{ reservation.reference }}</strong></td>
                                    <td>
                                        {% if reservation.vol %}
                                            <strong>{{ reservation.vol.numVol }}</strong>
                                            <br>
                                            <small class="text-muted">
                                                {{ reservation.vol.depart.codeIATA }} → {{ reservation.vol.arrivee.codeIATA }}
                                            </small>
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.vol %}
                                            {{ reservation.vol.dateDepart|date('d/m/Y H:i') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.statut == 'confirmé' %}
                                            <span class="badge bg-success">Confirmé</span>
                                        {% elseif reservation.statut == 'en attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% elseif reservation.statut == 'annulé' %}
                                            <span class="badge bg-danger">Annulé</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ reservation.statut }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ reservation.tickets|length }}</span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        {% if reservation.statut == 'en attente' %}
                                            <a href="{{ path('app_paiement_new', {'reservationId': reservation.id}) }}"
                                               class="btn btn-sm btn-success">
                                                <i class="fas fa-credit-card"></i> Payer
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
