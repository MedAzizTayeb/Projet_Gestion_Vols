{% extends 'base.html.twig' %}

{% block title %}Mon Profil - AeroManager{% endblock %}

{% block body %}
    <div class="container py-4">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1 class="mb-4">
            <i class="fas fa-user-circle text-primary"></i> Mon Profil
        </h1>

        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <div class="display-1 text-primary mb-3">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <h4>{{ client.user.nomComplet }}</h4>
                        <p class="text-muted">{{ client.user.email }}</p>

                        <div class="border-top pt-3 mt-3">
                            <div class="text-muted small">Membre depuis</div>
                            <strong>{{ client.dateInscription|date('d/m/Y') }}</strong>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="{{ path('app_client_profil_edit') }}" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier le profil
                            </a>
                            <a href="{{ path('app_client_change_password') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-key"></i> Changer mot de passe
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informations Personnelles</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="text-muted small">Nom</label>
                                <div class="h6">{{ client.user.nom }}</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Prénom</label>
                                <div class="h6">{{ client.user.prenom }}</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="text-muted small">Email</label>
                                <div class="h6">{{ client.user.email }}</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Téléphone</label>
                                <div class="h6">{{ client.telephone ?: 'Non renseigné' }}</div>
                            </div>
                        </div>

                        <div class="alert alert-info mt-4 mb-0">
                            <i class="fas fa-info-circle"></i>
                            Ces informations sont utilisées pour vos réservations et communications.
                        </div>
                    </div>
                </div>

                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-line"></i> Statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3">
                                    <div class="h2 text-primary mb-0">{{ client.reservations|length }}</div>
                                    <small class="text-muted">Réservations</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3">
                                    {% set confirmed = client.reservations|filter(r => r.statut == 'confirmé')|length %}
                                    <div class="h2 text-success mb-0">{{ confirmed }}</div>
                                    <small class="text-muted">Confirmées</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3">
                                    {% set tickets_count = 0 %}
                                    {% for reservation in client.reservations %}
                                        {% set tickets_count = tickets_count + reservation.tickets|length %}
                                    {% endfor %}
                                    <div class="h2 text-info mb-0">{{ tickets_count }}</div>
                                    <small class="text-muted">Billets</small>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-success mb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-star"></i>
                                    <strong>Statut :</strong>
                                    {% if client.reservations|length > 10 %}
                                        Client Gold
                                    {% elseif client.reservations|length > 5 %}
                                        Client Silver
                                    {% else %}
                                        Client Standard
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-history"></i> Activité Récente</h5>
                    </div>
                    <div class="card-body">
                        {% if client.reservations|slice(0, 5)|length > 0 %}
                            <div class="list-group">
                                {% for reservation in client.reservations|slice(0, 5) %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">
                                                <i class="fas fa-plane text-primary"></i>
                                                Réservation {{ reservation.reference }}
                                            </h6>
                                            <small>{{ reservation.dateRes|date('d/m/Y') }}</small>
                                        </div>
                                        <p class="mb-1">
                                            {% if reservation.vol %}
                                                Vol {{ reservation.vol.numVol }} -
                                                {{ reservation.vol.depart.ville }} → {{ reservation.vol.arrivee.ville }}
                                            {% else %}
                                                Vol non spécifié
                                            {% endif %}
                                        </p>
                                        <small>
                                            {% if reservation.statut == 'confirmé' %}
                                                <span class="badge bg-success">Confirmé</span>
                                            {% elseif reservation.statut == 'annulé' %}
                                                <span class="badge bg-danger">Annulé</span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark">En attente</span>
                                            {% endif %}
                                        </small>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="text-center mt-3">
                                <a href="{{ path('app_client_reservations') }}" class="btn btn-sm btn-outline-primary">
                                    Voir toutes mes réservations
                                </a>
                            </div>
                        {% else %}
                            <div class="text-center py-3 text-muted">
                                <i class="fas fa-info-circle"></i>
                                Aucune activité récente
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
{% endblock %}
